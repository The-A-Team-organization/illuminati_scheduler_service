pipeline {
    agent any
    options {
        skipStagesAfterUnstable()
    }
    stages {
        
        stage('Build') { 
            steps { 
                script{
                 app = docker.build("scheduler_dev")
                }
            }
        }
        stage('Logging into AWS ECR') {
            steps {
                script {
                    sh """aws ecr get-login-password --region eu-central-1 | docker login --username AWS --password-stdin ${SCHEDULER_ECR_LINK}"""
                }  
            }
        }
        stage('Deploy') {
            steps {
                script{
                    docker.withRegistry("https://${SCHEDULER_ECR_LINK}") {
                        app.push("${env.BUILD_NUMBER}")
                        app.push("latest")
                    }
                }
            }
        }
    }
}